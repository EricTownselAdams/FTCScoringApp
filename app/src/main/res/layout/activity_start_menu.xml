<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_StartMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ftcbackground"
    tools:context="ericadams.ftcscoringapp.startmenu">


    <Button
        android:id="@+id/StartScoring"
        android:text="Start Scoring!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="StartScoring"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/About"
        android:onClick="AboutPage"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/ScoutingButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Go Scouting!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScoutingButton"
        android:onClick="StartScouting"
        android:layout_below="@+id/StartScoring"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />
</RelativeLayout>
