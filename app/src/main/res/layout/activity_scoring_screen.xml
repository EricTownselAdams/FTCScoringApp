        android:layout_below="@+id/ParkedSpinnerA"
        android:layout_alignLeft="@+id/CornerMinusA"
        android:layout_alignStart="@+id/CornerMinusA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CenterCountLabelA"
