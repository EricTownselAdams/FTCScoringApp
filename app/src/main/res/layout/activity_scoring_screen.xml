        android:layout_height="wrap_content"
        android:onClick="buttonOnClick"
        android:layout_alignBaseline="@+id/CornerPlusD"
        android:layout_alignBottom="@+id/CornerPlusD"
        android:layout_toRightOf="@+id/CornerLabelD"
        android:layout_toEndOf="@+id/CornerLabelD" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CornerCountLabelD"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:text="0"
        android:layout_alignBaseline="@+id/CornerMinusD"
        android:layout_alignBottom="@+id/CornerMinusD"
        android:layout_alignLeft="@+id/CornerCountLabelA"
        android:layout_alignStart="@+id/CornerCountLabelA" />

    <Button
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="+"
        android:id="@+id/CornerPlusA"
