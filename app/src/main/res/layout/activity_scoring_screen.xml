    <Button
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="+"
        android:id="@+id/CornerPlusD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CenterPlusD"
        android:layout_alignLeft="@+id/CenterPlusD"
        android:layout_alignStart="@+id/CenterPlusD"
        android:layout_marginTop="10dp" />

    <TextView
