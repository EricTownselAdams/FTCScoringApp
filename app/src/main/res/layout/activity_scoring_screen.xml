        android:layout_alignStart="@+id/CenterScoreD" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DriverScore"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/CenterPlusD"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:text="Not Parked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ParkedSpinnerA"
        tools:textColor="@android:color/black"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_below="@+id/BeaconSpinnerA"
        android:layout_alignLeft="@+id/BeaconSpinnerA"
        android:layout_alignStart="@+id/BeaconSpinnerA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
