        android:layout_height="wrap_content"
        android:id="@+id/CornerScoreA"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="0"
        android:layout_alignBaseline="@+id/CornerPlusA"
        android:layout_alignBottom="@+id/CornerPlusA"
        android:layout_alignLeft="@+id/CenterScoreA"
        android:layout_alignStart="@+id/CenterScoreA" />

    <TextView
        android:text="Autonomous Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AutoLabel"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AutoScore"
