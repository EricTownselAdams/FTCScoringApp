<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scoring_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ericadams.ftcscoringapp.ScoringScreen">
// Above is layout stuff-I haven't done anything with it
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/AutoScore"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark" />//Autonomous score variable caled "AutoScore"

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CapBallScoreA"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:text="0"
        android:layout_below="@+id/AutoScore"
        android:layout_toLeftOf="@+id/AutoScore"
        android:layout_toStartOf="@+id/AutoScore" />// Cap ball score variable called "CapBallScoreA"

    <TextView
        android:text="Autonomous Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AutoLabel"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />// Autonomous Label displays "Autonomous Score"

    <TextView
        android:text=" Cap Ball Is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CapBallLabelA"
        tools:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_below="@+id/AutoLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />// Cap ball label displays "Cap Ball Is"

    <Spinner
        android:text="on the base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CapBallSpinA"
        tools:textColor="@android:color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/AutoLabel"
        android:layout_toRightOf="@+id/CapBallLabelA"
        android:layout_toEndOf="@+id/CapBallLabelA" /> // Spinner for the cap ball in autonomous displays "on the base" as default, changes to "on floor"



</RelativeLayout>
