        android:layout_height="wrap_content"
        android:onClick="buttonOnClick"
        android:layout_below="@+id/CenterMinusA"
        android:layout_alignLeft="@+id/CenterPlusA"
        android:layout_alignStart="@+id/CenterPlusA" />

    <Button
        android:minHeight="0dp"
        android:minWidth="0dp"
