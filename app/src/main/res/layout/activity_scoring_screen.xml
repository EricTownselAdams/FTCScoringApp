<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scoring_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ericadams.ftcscoringapp.ScoringScreen">
    // Cap ball score variable called
    "CapBallScoreA"

    // Autonomous Label displays "Autonomous Score"

    // Cap ball label displays "Cap Ball Is"

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ParkedScoreA"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="0"
        android:layout_below="@+id/BeaconSpinnerA"
        android:layout_alignLeft="@+id/BeaconScoreA"
        android:layout_alignStart="@+id/BeaconScoreA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ParkedLabelA"
        tools:textColor="@android:color/black"
        android:textSize="14sp"
        android:text=" Robot Parked:"
        android:textColor="@android:color/black"
        android:layout_below="@+id/BeaconSpinnerA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:text="Not Parked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ParkedSpinnerA"
        tools:textColor="@android:color/black"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_below="@+id/BeaconSpinnerA"
        android:layout_alignLeft="@+id/BeaconSpinnerA"
        android:layout_alignStart="@+id/BeaconSpinnerA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CornerLabelA"
        tools:textColor="@android:color/black"
        android:textSize="14sp"
        android:text="Balls In Corner Goal:"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/CornerMinusA"
        android:layout_alignBottom="@+id/CornerMinusA"
        android:layout_toStartOf="@+id/ParkedSpinnerA"
        android:layout_alignRight="@+id/CenterLabelA"
        android:layout_alignEnd="@+id/CenterLabelA" />

    <Spinner
        android:text="0 Beacons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BeaconSpinnerA"
        tools:textColor="@android:color/black"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/BeaconLabelA"
        android:layout_toRightOf="@+id/BeaconLabelA"
        android:layout_toEndOf="@+id/BeaconLabelA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BeaconScoreA"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="0"
        android:layout_alignTop="@+id/BeaconSpinnerA"
        android:layout_alignLeft="@+id/CapBallScoreA"
        android:layout_alignStart="@+id/CapBallScoreA" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TotalScore"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/TotalScoreLabel"
        android:layout_alignBottom="@+id/TotalScoreLabel"
        android:layout_toRightOf="@+id/TotalScoreLabel"
        android:layout_toEndOf="@+id/TotalScoreLabel"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CornerCountLabelA"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:text="0"
        android:layout_alignTop="@+id/CornerLabelA"
        android:layout_alignLeft="@+id/CenterCountLabelA"
        android:layout_alignStart="@+id/CenterCountLabelA" />

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AutoScore"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/CenterPlusA"
        android:layout_alignStart="@+id/CenterPlusA" />

    <TextView
        android:text=" Cap Ball is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CapBallLabelA"
        tools:textColor="@android:color/black"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/AutoScore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BeaconLabelA"
        tools:textColor="@android:color/black"
        android:textSize="14sp"
        android:text=" Beacons Triggered:"
        android:textColor="@android:color/black"
        android:layout_below="@+id/CapBallLabelA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ResetButton"
        android:layout_below="@+id/CornerLabelA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Total Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TotalScoreLabel"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/ResetButton"
        android:layout_toRightOf="@+id/AutoScore"
        android:layout_toEndOf="@+id/AutoScore" />

    <TextView
        android:text="AutoScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AutoScore"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CenterCountLabelA"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:text="0"
        android:layout_alignBottom="@+id/CenterPlusA"
        android:layout_alignLeft="@+id/TotalScore"
        android:layout_alignStart="@+id/TotalScore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CapBallScoreA"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="0"
        android:layout_above="@+id/BeaconScoreA"
        android:layout_alignLeft="@+id/CornerScoreA"
        android:layout_alignStart="@+id/CornerScoreA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CenterScoreA"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="0"
        android:layout_above="@+id/CornerMinusA"
        android:layout_alignLeft="@+id/CornerScoreA"
        android:layout_alignStart="@+id/CornerScoreA" />

    <Spinner
        android:text="on the base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CapBallSpinA"
        tools:textColor="@android:color/black"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_below="@+id/AutoScore"
        android:layout_toRightOf="@+id/AutoScore"
        android:layout_toEndOf="@+id/AutoScore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CenterLabelA"
        tools:textColor="@android:color/black"
        android:textSize="14sp"
        android:text=" Balls In Center Goal:"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/CenterMinusA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="+"
        android:id="@+id/CornerPlusA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonOnClick"
        android:layout_alignBaseline="@+id/CornerScoreA"
        android:layout_alignBottom="@+id/CornerScoreA"
        android:layout_alignLeft="@+id/CenterPlusA"
        android:layout_alignStart="@+id/CenterPlusA" />

    <Button
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="+"
        android:id="@+id/CenterPlusA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignBaseline="@+id/CenterScoreA"
        android:layout_alignBottom="@+id/CenterScoreA"
        android:layout_toLeftOf="@+id/CenterCountLabelA"
        android:layout_toStartOf="@+id/CenterCountLabelA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CornerScoreA"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="0"
        android:layout_alignBottom="@+id/CornerCountLabelA"
        android:layout_toRightOf="@+id/ParkedSpinnerA"
        android:layout_toEndOf="@+id/ParkedSpinnerA" />

    <Button
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="-"
        android:id="@+id/CornerMinusA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonOnClick"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/CenterLabelA"
        android:layout_alignLeft="@+id/TotalScoreLabel"
        android:layout_alignStart="@+id/TotalScoreLabel" />

    <Button
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="-"
        android:id="@+id/CenterMinusA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonOnClick"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/ParkedSpinnerA"
        android:layout_alignLeft="@+id/CornerMinusA"
        android:layout_alignStart="@+id/CornerMinusA" />


</RelativeLayout>
