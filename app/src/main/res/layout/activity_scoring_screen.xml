    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CenterGoalLabelD"
        tools:textColor="@android:color/black"
        android:textSize="14sp"
        android:text=" Balls In Center Goal:"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/CenterMinusD"
        android:layout_alignBottom="@+id/CenterMinusD"
        android:layout_alignLeft="@+id/DriverLabel"
